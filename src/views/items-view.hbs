<h3>Search for an Item:</h3>
<form method="get">
    <div class="input_field">
        <label for="id">ID: </label>
        <input type="text" id="itemID" name="itemID" value="" style="size: 50px">
    </div>
    <div class="input_field">
        <label for="brand">Brand: </label>
        <input type="text" id="brand" name="brand" value="" style="size: 50px">
    </div>
    <div class="input_field">
        <label for="name">Name: </label>
        <input type="text" id="name" name="name" value="" style="size: 50px">
    </div>
    <input type="submit" value="Search">
</form>
<br>


{{#if grocery_items}}
    <table class="catalogue">
        <thead>
        <tr>
            <td class="product_id">ID</td>
            <td class="product_fact">Product</td>
            <td class="nutrition_fact">Weight (g/mL)</td>
            <td class="nutrition_fact">Price ($)</td>
            <td class="nutrition_fact">Cal</td>
            <td class="nutrition_fact">Carbs (g)</td>
            <td class="nutrition_fact">Fat (g)</td>
            <td class="nutrition_fact">Prot (g)</td>
        </tr>
        </thead>
        <tbody>
        {{#each grocery_items}}
            <tr>
                <td class="product_id">{{itemID}}</td>
                <td class="product_fact"><a href="/items/{{slug}}" target="_blank">{{brand}} {{name}}</a></td>
                <td class="nutrition_fact">{{weight}}</td>
                <td class="nutrition_fact">{{price}}</td>
                <td class="nutrition_fact">{{cals}}</td>
                <td class="nutrition_fact">{{carbs}}</td>
                <td class="nutrition_fact">{{fat}}</td>
                <td class="nutrition_fact">{{protein}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/if}}

{{#if message}}
    <h3 style="text-align: center">{{message}} Maybe you can <a href='/create/item' target='_blank'>create one</a> that does!</h3>
{{/if}}